<table class="greyGridTable">
        <thead>
            <tr>
                <th>
                    <h3>Week @GetWeekNumber(Menu.StartDate) Menu</h3>
                    <text>@Menu.StartDate.ToString("d/M/yyyy") - @Menu.EndDate.ToString("d/M/yyyy")</text>
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (MenuItem item in Menu.MenuItems)
        {
            @if (item.Title != null)
            {
                <tr>
                    <td>
                        <div>
                        <h5>@GetWeekDay(item.WeekDay)</h5>
                            <div>@item.Title</div>
                            <div>
                                @if (item.L)
                                {   
                                    <text>L </text>
                                }
                                @if (item.G)
                                {
                                    <text>G </text>
                                }
                                @if (item.V)
                                {
                                    <text>V </text>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        -
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <div>
        @if(Previous != null)
        {
        <button @onclick="@(() => Update.InvokeAsync(Previous))">Previous</button>
        }else
        {
            <button disabled>Previous</button>
        }
        @if(Next != null)
        {
        <button @onclick="@(() => Update.InvokeAsync(Next))">Next</button>
        }
        else
        {
        <button disabled>Next</button>
        }
</div>


@code{
    [Parameter] public WeekMenu Menu { get; set; } = new WeekMenu();
    [Parameter] public WeekMenu? Previous { get; set; }
    [Parameter] public WeekMenu? Next { get; set; }
    [Parameter] public EventCallback<WeekMenu> Update { get; set; }

    private string GetWeekDay(int day)
    {
        WeekDay weekDay = (WeekDay) day;
        return weekDay.ToString();
    }

    private int GetWeekNumber(DateTime date)
    {
        DateTimeFormatInfo dfi = DateTimeFormatInfo.CurrentInfo;
        Calendar cal = dfi.Calendar;
        return cal.GetWeekOfYear(date, dfi.CalendarWeekRule, dfi.FirstDayOfWeek);
    }



}